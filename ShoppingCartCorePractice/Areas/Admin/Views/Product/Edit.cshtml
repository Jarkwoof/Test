@model ShoppingCartCorePractice.Migrations.Products
@{
    ViewData["Title"] = "Create";
}

<h2 class="text-info">產品</h2>
@using (Html.BeginForm("Update", "Product", new { area = "Admin" }, FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <div class="p-4 rounded border">
        <div class="form-group row">
            <div class="col-2">
                產品名稱
            </div>
            <div class="col-5">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                產品類別
            </div>
            <div class="col-5">
                @Html.DropDownList("Category_Id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                產品圖示
            </div>
            <div class="col-5">
                <input asp-for="PhotoUrl" class="form-control" type="file" />
                @Html.ValidationMessageFor(model => model.PhotoUrl, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                產品價格
            </div>
            <div class="col-5">
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                上架日期
            </div>
            <div class="col-5">
                @Html.EditorFor(model => model.PublishDT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IsPublic, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                是否有貨
            </div>
            <div class="col-5">
                <input asp-for="IsPublic" class="" type="checkbox" />
                @Html.ValidationMessageFor(model => model.IsPublic, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="新增" />
            <a asp-action="Index" class="btn btn-success">返回</a>
        </div>
    </div>
}






@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
